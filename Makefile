# ============================================================================#
#                                                                             #
#                              YZONE/Makefile                                 #
#                                                                             #
# ============================================================================#

YDIR_ROOT  = .

include Make_def


EDIT_FILES = $(DEMO_C) 
# =============================================================================
all :
	@-(cd $(YDIR_ROOT)/src    &&  make)      
	@-(cd $(YDIR_ROOT)/demo   &&  make) 
# =============================================================================
clean :   
	@-(cd $(YDIR_ROOT)/src    &&  make clean)      
	@-(cd $(YDIR_ROOT)/demo   &&  make clean)
# ============================================================================= 
edit :                                                                          
	$(EDIT_PROG) $(EDIT_FILES) &                                            
# =============================================================================
   
